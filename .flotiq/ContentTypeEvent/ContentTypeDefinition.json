      },
      "gallery": {
        "label": "Gallery",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationMultiple": true,
          "relationContenttype": "_media"
        }
      },
      "description": {
        "label": "Description",
        "unique": false,
        "helpText": "",
        "inputType": "richtext"
